<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_marginVertical="10dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
            android:gravity="end"
            android:text="TextView"
            android:layout_gravity="center"
            android:textSize="15dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/position" android:layout_weight="1"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_height="25dp" tools:srcCompat="@tools:sample/avatars" android:id="@+id/logo"
            android:layout_weight="2"/>
    <TextView
            android:text="TextView"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="15dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/teamName" android:layout_weight="5"/>
    <TextView
            android:text="TextView"
            android:textSize="15dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/wins" android:layout_weight="2"/>
    <TextView
            android:text="TextView"
            android:textSize="15dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/losses" android:layout_weight="2"/>
    <TextView
            android:text="TextView"
            android:textSize="15dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/points_plus" android:layout_weight="2"/>
    <TextView
            android:text="TextView"
            android:textSize="15dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/points_minus" android:layout_weight="2"/>
</LinearLayout>