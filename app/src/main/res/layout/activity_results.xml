<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView
            android:text="@string/upcomingHeader"
            android:gravity="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/orange_red"
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="50dp" android:id="@+id/header"/>
    <ImageView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" tools:srcCompat="@drawable/sad2" android:id="@+id/sad"/>
    <TextView
            android:text=""
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="30dp"
            android:textStyle="bold"
            android:fontFamily="serif-monospace"
            android:textColor="@color/orange_red"
            android:layout_width="match_parent"
            android:layout_height="0dp" android:id="@+id/noResults"/>
    <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/resultsRecycler"/>
</LinearLayout>