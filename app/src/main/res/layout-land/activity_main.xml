<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <Button
            android:text="@string/menu1"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/white_smoke"
            android:background="@drawable/rodriguez2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" android:id="@+id/livescores"/>
    <Button
            android:text="@string/menu2"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/white_smoke"
            android:layout_weight="1"
            android:background="@drawable/shved2"
            android:layout_width="0dp"
            android:layout_height="match_parent" android:id="@+id/standings"/>
    <Button
            android:text="@string/menu3"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/white_smoke"
            android:layout_weight="1"
            android:background="@drawable/balbay2"
            android:layout_width="0dp"
            android:layout_height="match_parent" android:id="@+id/results"/>
</LinearLayout>